<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Product</title>
</head>
<body>
    <%- include('../partials/header') %>
    <h1>View Product</h1>
    <p>Name: <%= product.name %></p>
