<!-- views/admin/editProduct.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
</head>
<body>
    <%- include('../partials/header') %>
    <h1>Edit Product</h1>
    <form action="/admin/products/edit/<%= product._id %>" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required>
        <label for="image">Image Url:</label>
        <input type="text" id="image" name="image" value="<%= product.image %>" required>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" required>
        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <% categories.forEach(category => { %>
                <option value="<%= category._id %>" <%= category._id.equals(product.category._id) ? 'selected' : '' %>><%= category.name %></option>
            <% }) %>
        </select>
        <label for="subcategory">Subcategory:</label>
        <select id="subcategory" name="subcategory" required>
            <% subcategories.forEach(subcategory => { %>
                <option value="<%= subcategory._id %>" <%= subcategory._id.equals(product.subcategory._id) ? 'selected' : '' %>><%= subcategory.name %></option>
            <% }) %>
        </select>
        <label for="brand">Brand:</label>
        <select id="brand" name="brand" required>
            <% brands.forEach(brand => { %>
                <option value="<%= brand._id %>" <%= brand._id.equals(product.brand._id) ? 'selected' : '' %>><%= brand.name %></option>
            <% }) %>
        </select>
        <button type="submit">Update</button>
    </form>
    <a href="/admin/products">Back to Products</a>
    <%- include('../partials/footer') %>
</body>
</html>
